<Window x:Class="TaskManager.Views.ReklamaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager.Views"
        mc:Ignorable="d"
        Title="{Binding TitleWindow}" 
        WindowStartupLocation="CenterScreen"
        MinHeight="400"
        MinWidth="370"
        Height="400"
        Width="370"
        MaxHeight="400"
        MaxWidth="370"       
        WindowStyle="ToolWindow"
        Background="{StaticResource Gradient_Black_White_Black}">
    <Grid>
        <TextBlock Foreground="Black"
                       FontWeight="Bold"
                       FontStyle="Italic"
                       FontSize="15"
                       Padding="10"
                       Text="{Binding TextReklama}" 
                       Style="{StaticResource Wrapping}">
        </TextBlock>

    </Grid>
</Window>
